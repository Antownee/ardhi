doctype html
html(lang='en')
  include includes/head.pug
  body
    #wrapper
      // Navigation
      include includes/nav.pug
      #page-wrapper
        // /.row
        .row
          .col-lg-12
            h1.page-header Account
          // /.col-lg-4
          .col-lg-12
            if nssuccess
              .alert.alert-success.alert-dismissable
                button.close(type='button', data-dismiss='alert', aria-hidden='true') ×
                |  #{nssuccess}
            else if nserror
              .alert.alert-danger.alert-dismissable
                button.close(type='button', data-dismiss='alert', aria-hidden='true') ×
                |  #{nserror}
          span
            | &nbsp
          .col-lg-12
            .panel.panel-success
              .panel-heading
                | Account details
              .panel-body
                .col-lg-7
                  form(role='form', method='post')
                    fieldset(disabled='')
                    .form-group
                      label Username
                      p.form-control-static #{farmer.username}
                    .form-group
                      label Address
                      p.form-control-static #{farmer.nemAddress}
                    .form-group
                      label Private Key
                      p.form-control-static #{account.privateKey}  
          .col-lg-12
            
               
          // /.col-lg-4
          // /#page-wrapper
          // /#wrapper
